{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "types": ["@citizenfx/server",  "@types/node", "webpack-env"],
    "lib": ["ES2020"],
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"],
      "@vpx/*": ["shared/vpx/*"]
    }
  },
  "include": ["./**/*", "../shared"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}